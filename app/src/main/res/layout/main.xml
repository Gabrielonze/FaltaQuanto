<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.gabri.faltaquanto.Main"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notas pt. 1"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="#FF549FEF" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#549fef">

        <EditText
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/a1"
            android:text="5"
            android:gravity="center"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/textView2"
            android:autoText="false"
            android:enabled="false"
            android:textColor="#000000" />

        <EditText
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/pesoA1"
            android:text="1"
            android:gravity="center"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/textView3"
            android:autoText="false"
            android:enabled="false"
            android:textColor="#000000" />

        <EditText
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/p1"
            android:text="5"
            android:gravity="center"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/textView"
            android:autoText="false"
            android:enabled="false"
            android:textColor="#000000" />

        <EditText
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/pesoP1"
            android:text="3"
            android:gravity="center"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="__________________________"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal|top"
        android:background="#FF549FEF" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="4"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="#FF549FEF" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notas pt. 2"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="#d44040" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d44040" >

        <EditText
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/a2"
            android:text="5"
            android:gravity="center"
